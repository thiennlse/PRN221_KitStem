@page
@model KitStem_System.Pages.KitShopPage.ViewKitShopModel
@{
    ViewData["Title"] = "Kit Shop";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

<div class="container mt-4">
    <h1 class="mb-4 text-center">Kit Shop</h1>

    <!-- Search Bar -->
    <form method="get" class="mb-4 d-flex justify-content-center">
        <div class="input-group w-50">
            <input type="text" name="searchTerm" class="form-control" placeholder="Search Kits" value="@Model.SearchTerm" />
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    <!-- Kit List -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var kit in Model.Kits)
        {
            <div class="col">
                <div class="card shadow-sm border-0 rounded-3 overflow-hidden">
                    <img src="@kit.Image"
                         class="card-img-top"
                         alt="@kit.Attribute"
                         style="object-fit: cover; height: 200px;" />
                    <div class="card-body">
                        <h6 class="card-title text-truncate" title="@kit.Name">@kit.Name</h6>
                        <p class="card-text text-danger fw-bold">$@kit.price</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="@Url.Page("/KitShopPage/KitDetailShop", new { id = kit.Id })" class="btn btn-outline-primary btn-sm">View Details</a>

                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    /* Custom Hover Effects */
    .card:hover {
        transform: translateY(-5px);
        transition: transform 0.3s ease-in-out;
    }

    .card-body:hover {
        background-color: #f8f9fa;
    }
</style>
