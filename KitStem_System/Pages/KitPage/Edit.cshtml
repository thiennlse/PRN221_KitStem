@page
@model KitStem_System.Pages.KitPage.EditModel

@{
    ViewData["Title"] = "Edit KitStem";
}

<h1>Edit KitStem</h1>

<h4>KitStem</h4>
<hr />
<div class="row">
    <div class="col-md-8 offset-md-2">
        <form method="post" enctype="multipart/form-data">
            <!-- Display validation summary for model errors -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Attribute Field -->
            <div class="form-group">
                <label asp-for="KitStem.Attribute" class="control-label"></label>
                <input asp-for="KitStem.Attribute" class="form-control" />
                <span asp-validation-for="KitStem.Attribute" class="text-danger"></span>
            </div>

            <!-- Status Field -->
            <div class="form-group">
                <label asp-for="KitStem.Status" class="control-label"></label>
                <input asp-for="KitStem.Status" class="form-control" />
                <span asp-validation-for="KitStem.Status" class="text-danger"></span>
            </div>

            <!-- Name Field -->
            <div class="form-group">
                <label asp-for="KitStem.Name" class="control-label"></label>
                <input asp-for="KitStem.Name" class="form-control" />
                <span asp-validation-for="KitStem.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UploadedImage" class="control-label">New Image</label>
                <input type="file" asp-for="UploadedImage" class="form-control" />
                <span asp-validation-for="UploadedImage" class="text-danger"></span>
            </div>


            <!-- Quantity Field -->
            <div class="form-group">
                <label asp-for="KitStem.quantity" class="control-label"></label>
                <input asp-for="KitStem.quantity" class="form-control" />
                <span asp-validation-for="KitStem.quantity" class="text-danger"></span>
            </div>

            <!-- Price Field -->
            <div class="form-group">
                <label asp-for="KitStem.price" class="control-label"></label>
                <input asp-for="KitStem.price" class="form-control" />
                <span asp-validation-for="KitStem.price" class="text-danger"></span>
            </div>

            <!-- Hidden Id Field -->
            <input type="hidden" asp-for="KitStem.Id" />

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<!-- Back to List Link -->
<div class="mt-3">
    <a class="btn btn-secondary" asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    <!-- Directly include the validation scripts -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
