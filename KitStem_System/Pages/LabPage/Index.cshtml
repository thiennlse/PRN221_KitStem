@page
@model KitStem_System.Pages.LabPage.IndexModel;

@{
    ViewData["Title"] = "Lab Management";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Lab Management</h1>

    <div class="row mb-3">
        <div class="col-md-6">
            <a asp-page="Create" class="btn btn-primary btn-lg">Create New</a>
        </div>
        <div class="col-md-6 text-right">
            <form method="get">
                <input type="text" placeholder="Search..." name="txtSearch" class="form-control mr-1" />
                <button type="submit" class="btn btn-info">Search</button>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Labs List</h5>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Image</th> <!-- New column for image -->
                        <th>
                            @Html.DisplayNameFor(model => model.Labs[0].Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Labs[0].Kit)
                        </th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Labs != null && Model.Labs.Any())
                    {
                        foreach (var item in Model.Labs)
                        {
                            <tr>
                                <td>
                                    <img src="@(string.IsNullOrEmpty(item.Image) ? "https://res.cloudinary.com/dkedkbs8d/image/upload/v1730281617/uxjktctcnd0crjwswt8a.jpg" : item.Image)"
                                         alt="Lab Image"
                                         class="img-thumbnail"
                                         style="width: 100px; height: 100px;" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Kit.Attribute)
                                </td>
                                <td class="text-center">
                                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center">No labs found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
