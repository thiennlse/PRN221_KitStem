@page
@model KitStem_System.Pages.LabPage.DeleteModel

@{
    ViewData["Title"] = "Delete Lab";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Delete Lab</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title mb-3">Are you sure you want to delete this Lab?</h4>
                    <div>
                        <dl class="row">
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Lab.Description)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Lab.Description)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Lab.Kit)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Lab.Kit.Attribute)
                            </dd>
                        </dl>
                    </div>

                    <form method="post">
                        <input type="hidden" asp-for="Lab.Id" />
                        <div class="form-group text-center">
                            <input type="submit" value="Delete" class="btn btn-danger btn-lg me-2" />
                            <a asp-page="Index" class="btn btn-secondary btn-lg">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
