@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-header text-center">
                    <h4 class="mb-0">Register</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label for="txtUsername" class="form-label">Username</label>
                            <input type="text" class="form-control" id="txtUsername" name="txtUsername" required />
                        </div>
                        <div class="mb-3">
                            <label for="txtPassword" class="form-label">Password</label>
                            <input type="password" class="form-control" id="txtPassword" name="txtPassword" required />
                        </div>
                        <div class="mb-3">
                            <label for="txtConfirmPassword" class="form-label">Confirm Password</label>
                            <input type="password" class="form-control" id="txtConfirmPassword" name="txtConfirmPassword" required />
                        </div>
                        <div class="d-grid">
                            <button type="submit" name="btRegister" class="btn btn-primary">Register</button>
                        </div>
                        <div class="mt-3 text-center">
                            <span>Already have an account? </span>
                            <a asp-page="/Index" class="text-primary">Login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
